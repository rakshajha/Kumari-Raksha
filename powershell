#shell_variables

ead -p "Enter a number: " numb1
read -p "Enter another number : " numb2
result=`expr $numb1 + $numb2`
echo "addition is : " $result

read -p "Enter a number: " numb1
read -p "Enter another  number : " numb2
result=`expr $numb1 - $numb2`
echo "Difference is : " $result
